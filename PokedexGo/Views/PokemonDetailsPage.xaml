<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PokedexGo.ViewModels"
             xmlns:model="clr-namespace:PokedexGo.Models"
             x:Class="PokedexGo.Views.PokemonDetailsPage"
             Title="{Binding Pokemon.Name, StringFormat='{0} Details'}">

    <ContentPage.BindingContext>
        <local:PokemonDetailsPageViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10"
                         Spacing="10">

        <Image Source="pokemonlogga.png"
               HorizontalOptions="Center"
               HeightRequest="150"/>

        <Grid ColumnDefinitions="Auto, Auto"
              ColumnSpacing="10"
              Padding="10"
              HorizontalOptions="Center">

            <Image Source="{Binding Pokemon.Sprites.Other.Home.FrontDefault, Mode=TwoWay}"
                   HeightRequest="250"
                   Grid.Column="0"/>

            <Image Source="{Binding Pokemon.Sprites.Other.Home.FrontShiny, Mode=TwoWay}"
                   HeightRequest="250"
                   Grid.Column="1"/>
        </Grid>

        <Label Text="{Binding Pokemon.Name, StringFormat='Name: {0}'}"
               TextColor="#0C3348"
               FontAttributes="Bold"
               FontSize="Title"
               TextDecorations="Underline"/>

        <Label Text="{Binding Pokemon.BaseExperience, StringFormat='Base experience: {0}'}"
               TextColor="#0C3348"
               FontAttributes="Bold"
               FontSize="Medium"/>

        <Label Text="{Binding Pokemon.Height, StringFormat='Height: {0}'}"
               TextColor="#0C3348"
               FontAttributes="Bold"
               FontSize="Medium"/>

        <Grid ColumnDefinitions="Auto, Auto">
            <Label Text="{Binding Pokemon.HeldItems, StringFormat='Held item: {0}'}"
                   TextColor="#0C3348"
                   FontAttributes="Bold"
                   FontSize="Medium"
                   Grid.Column="0"/>
            <CollectionView ItemsSource="{Binding Pokemon.HeldItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Pokemon">
                        <StackLayout>
                            <Label Text="{Binding Path=Item.Name}"
                                   TextColor="#0C3348"
                                   FontAttributes="Bold"
                                   FontSize="Medium"
                                   Grid.Column="1"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            
        </Grid>

        <!--Source="{Binding ImageSource, Mode=TwoWay}"-->
        <!--Source="{Binding Path=Sprites.FrontDefault}"-->


    </VerticalStackLayout>
</ContentPage>