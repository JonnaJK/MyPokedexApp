<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:PokedexGo.Models"
             x:Class="PokedexGo.Views.MyPokemonPage"
             Title="My Page">
    <VerticalStackLayout Padding="10"
                         Spacing="10">

        <Image Source="pokemonlogga.png"
               HeightRequest="200"
               HorizontalOptions="Center"/>

        <Label x:Name="welcomeText"
               Text="{Binding welcomeText}"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="30"/>

        <Image Source="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/home/25.png"
               HeightRequest="200"
               HorizontalOptions="Center"/>

        <Button Text="Show my Pokemon"
                HorizontalOptions="Center"
                Clicked="OnClickedGoToShowMyPokemonPage"/>

                <!--// TODO: Not working, why???-->
                <!--Command="{Binding ShowMyPokemonCommand}"-->
                <!--CommandParameter="{Binding Pokemons}"/>-->

        <Button Text="Log out"
                HorizontalOptions="Center"
                Clicked="OnClickedLogOut"/>

    </VerticalStackLayout>
</ContentPage>