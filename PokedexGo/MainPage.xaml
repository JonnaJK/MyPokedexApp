<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokedexGo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="pokemonlogga.png"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Gotta catch'em all!"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button
                x:Name="Login"
                Text="Login"
                Clicked="OnClickedGoLoginPage"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
