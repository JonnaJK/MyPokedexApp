<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PokedexGo.ViewModels"
             xmlns:model="clr-namespace:PokedexGo.Models"
             x:Class="PokedexGo.Views.ShowMyPokemonPage"
             Title="My Pokemon">
    
    <VerticalStackLayout Padding="10"
                         Spacing="10">

        <Image Source="pokemonlogga.png"
               HeightRequest="100"
               HorizontalOptions="Center"/>
        
        <Label Text="My Pokemons"
               VerticalOptions="Center"
               HorizontalOptions="Center" />

        <ListView x:Name="ListOfPokemons"
                  SeparatorColor="#0C3348">
                  <!--x:DataType="viewmodels:ShowMyPokemonPageViewModel"-->
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10"
                              ColumnDefinitions=".25*, .75*">

                            <Image Source="{Binding Path=Sprites.FrontDefault}"
                                   Grid.Column="0"
                                   HorizontalOptions="Center"
                                   HeightRequest="100"/>
                            
                            <Label Text="{Binding Name}"
                                   Grid.Column="1"
                                   FontSize="25"/>
                            
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>